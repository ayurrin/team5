<div class="container">
<h1 class="form-heading">いいねしている投稿</h1>

<% @user.liked_posts.each do |post| %>
  投稿者：
  <%= post.user.name %>
  <br>
  店名:
  <%= post.content %>
  <br>
  <% if post.image? %>
    <%= image_tag post.image.url %>
  <% end %>
  
  <br>
  <div class="likes-menus">
        <%= link_to("詳細", "/posts/#{post.id}") %>
  </div>
<% end %>

</div>
