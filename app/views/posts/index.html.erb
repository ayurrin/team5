<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <%= link_to(post.content, "/posts/#{post.id}") %>
      </div>
      <% if post.image? %>
        <%= image_tag post.image.url %>
      <% end %>

    <% end %>
  </div>
</div>