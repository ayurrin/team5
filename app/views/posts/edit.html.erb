<div class="posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    

    <%= form_for(@post, :url => {:controller => :posts, :action => :update}, :method => "POST") do |f| %>
      <p><%= f.text_field :content, size: 100 %></p>
      <p><%= f.label :住所 %></p>
      <p><%= f.text_field :address, size: 100 %></p>

      <p><%= f.label :画像 %></p>
      <%= f.file_field :image %> 　　
      <p><%= f.label :コメント %></p>
      <p><%= f.text_area :comment, :size=>"100x10" %></p>　　
      <p><%= f.submit "保存する" %></p>
    <% end %>
  </div>
</div>